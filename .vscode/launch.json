	"version": "0.2.0",
	"configurations": [
		{
			"name": "Vite",
			"request": "launch",
			"runtimeExecutable": "npx",
			"runtimeArgs": ["vite", "dev", "--open", "https://shiner-meet-termite.ngrok-free.app"],
			"type": "node",
			"serverReadyAction": {
				"action": "debugWithChrome",
				"pattern": "Local: http://localhost:([0-9]+)",
				"uriFormat": "http://localhost:%s",
				"webRoot": "${workspaceFolder}/src"
			}
		}
	]
}
